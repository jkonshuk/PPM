<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.sat14.ppm.MainActivity"
        android:background="#0b0888">

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/Video1"
            android:layout_alignParentTop="true" />

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/Video2"
            android:layout_below="@+id/button" />

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/Video3"
            android:layout_below="@+id/button2" />

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/Video4"
            android:layout_below="@+id/button3" />

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/Video5"
            android:layout_below="@+id/button4" />

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/Video6"
            android:layout_below="@+id/button5" />

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/Video7"
            android:layout_below="@+id/button6" />

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/Video8"
            android:layout_below="@+id/button7" />

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/videoView8"
            android:layout_below="@+id/button8" />

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/videoView9"
            android:layout_below="@+id/videoView9" />

        <VideoView
            android:layout_width="fill_parent"
            android:layout_height="150sp"
            android:id="@+id/videoView10"
            android:layout_below="@+id/button10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_below="@+id/Video1"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button2"
            android:layout_below="@+id/Video2"
            android:layout_alignStart="@+id/button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button3"
            android:layout_below="@+id/Video3"
            android:layout_alignStart="@+id/button2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button4"
            android:layout_below="@+id/Video4"
            android:layout_alignStart="@+id/button3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button5"
            android:layout_below="@+id/Video5"
            android:layout_alignStart="@+id/button4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button6"
            android:layout_below="@+id/Video6"
            android:layout_alignStart="@+id/button5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button7"
            android:layout_below="@+id/Video7"
            android:layout_alignStart="@+id/button6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button8"
            android:layout_below="@+id/Video8"
            android:layout_alignStart="@+id/button7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button9"
            android:layout_below="@+id/videoView8"
            android:layout_alignStart="@+id/button10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button10"
            android:layout_below="@+id/videoView9"
            android:layout_alignStart="@+id/button8"
            android:onClick="playSound" />


    </RelativeLayout>
</ScrollView>
